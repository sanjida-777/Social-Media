{
  "site": {
    "name": "SocialLite",
    "tagline": "A lightweight social experience",
    "description": "A responsive and lightweight social media platform similar to Facebook Lite",
    "version": "1.0.0",
    "logo": {
      "main": "/static/img/logo.svg",
      "favicon": "/static/img/favicon.ico",
      "touchIcon": "/static/img/touch-icon.png"
    },
    "url": "https://sociallite.example.com",
    "language": "en",
    "themeColor": "#1877f2"
  },
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "website": "https://yourwebsite.com",
    "github": "https://github.com/yourusername"
  },
  "app": {
    "defaultTheme": "dark",
    "availableThemes": ["dark", "light"],
    "defaultLanguage": "en",
    "availableLanguages": ["en", "bn"],
    "dataSaver": {
      "enabled": false,
      "imageQuality": 70,
      "maxImageWidth": 800,
      "autoPlayVideos": false
    },
    "notifications": {
      "enabled": true,
      "pushNotifications": true,
      "emailNotifications": true,
      "soundEnabled": true
    },
    "feed": {
      "postsPerPage": 10,
      "commentsPerPost": 3,
      "autoRefresh": true,
      "refreshInterval": 60000
    },
    "stories": {
      "duration": 5000,
      "maxLength": 15
    },
    "chat": {
      "messageLimit": 50,
      "typingIndicator": true,
      "readReceipts": true,
      "mediaUpload": true,
      "maxFileSize": 10485760
    },
    "security": {
      "sessionTimeout": 86400,
      "maxLoginAttempts": 5,
      "twoFactorAuth": false
    }
  },
  "api": {
    "baseUrl": "/api/v1",
    "timeout": 30000,
    "retryAttempts": 3,
    "endpoints": {
      "auth": {
        "login": "/auth/login",
        "register": "/auth/register",
        "logout": "/auth/logout",
        "resetPassword": "/auth/reset-password"
      },
      "users": {
        "profile": "/users/profile",
        "friends": "/users/friends",
        "search": "/users/search"
      },
      "posts": {
        "feed": "/posts/feed",
        "create": "/posts/create",
        "like": "/posts/like",
        "comment": "/posts/comment",
        "share": "/posts/share"
      },
      "messages": {
        "conversations": "/messages/conversations",
        "send": "/messages/send",
        "read": "/messages/read"
      },
      "stories": {
        "list": "/stories/list",
        "create": "/stories/create",
        "view": "/stories/view"
      },
      "notifications": {
        "list": "/notifications/list",
        "read": "/notifications/read",
        "settings": "/notifications/settings"
      }
    }
  },
  "features": {
    "posts": true,
    "stories": true,
    "messaging": true,
    "notifications": true,
    "friends": true,
    "groups": true,
    "events": false,
    "marketplace": false,
    "pages": false,
    "games": false,
    "videoCall": false,
    "liveStream": false
  },
  "paths": {
    "uploads": {
      "profileImages": "/static/uploads/profile_pics/",
      "postMedia": "/static/uploads/posts/",
      "storyMedia": "/static/uploads/stories/",
      "messageAttachments": "/static/uploads/message_attachments/"
    },
    "templates": {
      "base": "/templates/lite/",
      "emails": "/templates/emails/"
    }
  },
  "performance": {
    "caching": {
      "enabled": true,
      "duration": 3600
    },
    "compression": {
      "enabled": true,
      "level": 6
    },
    "lazyLoading": {
      "enabled": true,
      "threshold": 200
    },
    "minification": {
      "css": true,
      "js": true,
      "html": false
    }
  },
  "analytics": {
    "enabled": false,
    "provider": "google",
    "trackingId": "UA-XXXXXXXXX-X",
    "anonymizeIp": true
  },
  "ads": {
    "enabled": false,
    "provider": "none",
    "slots": {
      "feed": {
        "frequency": 5,
        "position": "inline"
      },
      "stories": {
        "frequency": 3,
        "position": "between"
      }
    }
  },
  "development": {
    "debug": false,
    "logLevel": "error",
    "mockData": false,
    "apiMocking": false
  }
}
